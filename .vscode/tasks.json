{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar proyecto",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/Cabeceras/main.c",
                "${workspaceFolder}/Cabeceras/Funciones.c",
                "-o",
                "${workspaceFolder}/Cabeceras/output/main"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Ejecutar proyecto",
            "type": "shell",
            "command": "${workspaceFolder}/Cabeceras/output/main",
            "dependsOn": "Compilar proyecto",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}